@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "", new { @class = "btn btn-primary" })

<table id="movieTable" class="table table-hover table-bordered">
    <thead>
    <tr>
        <th>Movies</th>
        <th>Genre</th>
        <th>Delete</th>    
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(@movie.Name, "Edit", new { id = movie.Id }, null)</td>
            <td>@movie.Genre.Name</td>
            <td><button class="btn-link js-delete">Delete</button> </td>
        </tr>
    }
    </tbody>

</table>

