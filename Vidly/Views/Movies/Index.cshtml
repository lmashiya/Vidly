@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table id="movieTable" class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Edit", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td><button class="btn-link js-delete" data-movie-id= @movie.Id >Delete</button> </td>
            </tr>
        }
    </tbody>

</table>
@Html.ActionLink("New Movie", "New", "", new { @class = "btn btn-primary" })


@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#movieTable").DataTable();

            $("#movieTable").on("click",
                ".js-delete",
                function() {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this movie ?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/movies/" + button.attr("data-movie-id"),
                                    Method: "DELETE",
                                    success: function() {
                                        return button.parents("tr").remove();
                                    }
                                });

                            }
                        });
                });
        })
    </script>
}
