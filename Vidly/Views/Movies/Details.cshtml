@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var dateAdded = @Model.DateAdded.ToLongDateString();
    var releaseDate = @Model.ReleaseDate.ToLongDateString();
}
<h2>@Model.Name</h2>

<ul>
    <li>Genre : @Model.Genre.Name</li>
    <li>Release date : @releaseDate</li>
    <li>Date added : @dateAdded</li>
    <li>Number of stock : @Model.NumberOfStock</li>
</ul>

